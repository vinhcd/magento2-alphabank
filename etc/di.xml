<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="AlphabankConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="string">alphabank</argument>
        </arguments>
    </virtualType>

<!--    <type name="Monogo\Alphabank\Gateway\Http\Client\Curl">-->
<!--        <arguments>-->
<!--            <argument name="converter" xsi:type="object">Monogo\Alphabank\Gateway\Http\Converter\HtmlFormConverter</argument>-->
<!--        </arguments>-->
<!--    </type>-->

    <virtualType name="AlphabankHttpClient" type="Magento\Payment\Gateway\Http\Client\Zend">
        <arguments>
            <argument name="converter" xsi:type="object">Monogo\Alphabank\Gateway\Http\Converter\HtmlFormConverter</argument>
        </arguments>
    </virtualType>

    <type name="Monogo\Alphabank\Gateway\Http\TransferFactory">
        <arguments>
            <argument name="config" xsi:type="object">AlphabankConfig</argument>
        </arguments>
    </type>

    <type name="Monogo\Alphabank\Gateway\Request\RequestBuilder">
        <arguments>
            <argument name="config" xsi:type="object">AlphabankConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="AlphabankPaymentGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Monogo\Alphabank\Gateway\Request\CaptureRequestBuilder</argument>
            <argument name="handler" xsi:type="object">Monogo\Alphabank\Gateway\Response\TxnCaptureHandler</argument>
            <argument name="transferFactory" xsi:type="object">Monogo\Alphabank\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Monogo\Alphabank\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">AlphabankHttpClient</argument>
        </arguments>
    </virtualType>
</config>
